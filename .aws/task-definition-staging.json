{
  "family": "zing-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::287767576800:role/zing-web-execution-role",
  "taskRoleArn": "arn:aws:iam::287767576800:role/zing-web-task-role",
  "containerDefinitions": [
    {
      "name": "app",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "NEXT_PUBLIC_ENV",
          "value": "staging"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/zing-web",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "node scripts/healthcheck.cjs || exit 1"
        ],
        "interval": 30,
        "retries": 6,
        "startPeriod": 300,
        "timeout": 10
      },
      "stopTimeout": 120
    }
  ]
}